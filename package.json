{
  "name": "aetheria-ai",
  "version": "1.1.4",
  "description": "Aetheria AI Desktop Assistant: An AI-Powered Desktop Application",
  "author": "Aetheria AI <support@aetheria-ai.com>",
  "main": "js/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.aetheria-ai.desktop",
    "productName": "Aetheria AI",
    "copyright": "Copyright Â© 2024 Aetheria AI",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "js/**/*",
      "css/**/*",
      "*.html",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "assets/icons",
      "category": "Utility",
      "maintainer": "Aetheria AI <support@aetheria-ai.com>"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.10",
    "audio-decode": "^2.2.2",
    "axios": "^1.11.0",
    "dompurify": "^3.2.4",
    "dotenv": "^16.4.7",
    "highlight.js": "^11.11.1",
    "image-js": "^0.36.0",
    "JSONStream": "^1.3.5",
    "katex": "^0.16.21",
    "mammoth": "^1.9.0",
    "marked": "^15.0.6",
    "node-wav": "^0.0.2",
    "pdf-parse": "^1.1.1",
    "prismjs": "^1.29.0",
    "puppeteer-core": "^24.15.0",
    "socket.io-client": "^4.8.1",
    "tesseract.js": "^6.0.0",
    "turndown": "^7.2.0",
    "uuid": "^11.0.5",
    "whisper": "^0.2.5",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  }
}